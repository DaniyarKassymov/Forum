@model Forum.ViewModels.ThemeVms.CreateThemeVm

@{
    ViewBag.Title = "Создать тему";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
        <div class="card-body d-flex justify-content-center">
            <form asp-action="CreateTheme" method="post" asp-controller="Theme" 
                  enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input asp-for="Title" class="form-control mb-2 text-muted" placeholder="Название темы">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input asp-for="Description" class="form-control my-2 text-muted" placeholder="Описание">
                </div>
                <input type="hidden" asp-for="CreationDate" value="@Model.CreationDate">
                <input type="hidden" asp-for="UserId" value="@Model.UserId">
                <input type="submit" class="btn btn-info w-100 mt-3 text-white" value="Создать">
            </form>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}