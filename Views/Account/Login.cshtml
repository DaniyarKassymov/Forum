@model Forum.ViewModels.AccountVms.LoginVm

@{
    ViewBag.Title = "Аутентификация";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
        <div class="card-body d-flex justify-content-center">
            <form asp-action="Login" method="post" asp-controller="Account">
                <div class="form-group">
                    <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                    <input asp-for="EmailOrUserName" class="form-control my-2 text-muted" placeholder="Логин или эл. адрес">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input asp-for="Password" class="form-control my-2 text-muted" placeholder="Пароль">
                </div>
                <input type="submit" class="btn btn-info w-100 mt-3 text-white" value="Вход">
            </form>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center text-center mt-2">
    <div class="card p-3" style="width: 18rem;">
        <div class="card-text">
            У вас еще нет аккаунта? <a class="text-decoration-none" asp-action="Register" asp-controller="Account">Регистрация</a>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
