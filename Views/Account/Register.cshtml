@model Forum.ViewModels.AccountVms.RegisterVm

@{
    ViewBag.Title = "Регистрация";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
        <div class="card-body d-flex justify-content-center">
            <form asp-action="Register" method="post" asp-controller="Account" 
                  enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <input asp-for="UserName" class="form-control mb-2 text-muted" placeholder="Имя пользователя">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <input asp-for="Email" class="form-control my-2 text-muted" placeholder="Эл. адрес">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Avatar" class="text-danger"></span>
                    <input type="file" asp-for="Avatar" class="form-control my-2 text-muted">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input asp-for="Password" class="form-control my-2 text-muted" placeholder="Пароль">
                </div>
                <div class="form-group">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <input asp-for="ConfirmPassword" class="form-control my-2 text-muted" placeholder="Подтвердите пароль">
                </div>
                <input type="submit" class="btn btn-info w-100 mt-3 text-white" value="Регистрация">
            </form>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center text-center mt-2">
    <div class="card p-3" style="width: 18rem;">
        <div class="card-text">
            Есть аккаунт? <a class="text-decoration-none" asp-action="Login" asp-controller="Account">Вход</a>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}