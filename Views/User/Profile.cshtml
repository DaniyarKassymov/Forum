@model Forum.ViewModels.UserVms.ProfileVm

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container" style="width: 960px;">
    <div class="row justify-content-around">
        <div class="col-4">
            <img class="rounded-circle" style="width: 200px; height: 200px;" src="~/@Model.Avatar" alt="avatar">
        </div>
        <div class="col-7 pt-4">
            <div class="row">
                <div class="col-4">
                    <h2>@Model.UserName</h2>
                </div>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <div>@Model.Themes.Count: созданных тем</div>
                <div>@Model.Answers.Count: кол-во ответов</div>
            </div>
        </div>
    </div>
    <div class="text-center">
        <h2>Темы</h2>
        <div class="row">
            @foreach (var theme in Model.Themes)
            {
                <div class="theme_div">
                    <a asp-route-id="@theme.Id" asp-action="Details" asp-controller="Theme" class="theme_row">
                        <div class="theme_fields col-4">@theme.Title</div>
                        <div class="theme_fields col-4">@theme.CreationDate</div>
                        <div class="theme_fields col-4">@theme.User.UserName</div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>